{
    "version": 2,
    "builds": [
      {
        "src": "src/index.js",
        "use": "@vercel/node"
      },
      {
        "src":"frontend/**",
        "use": "@vercel/static"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "src/index.js"
      },
      {
        "src": "/(videoCall.js|voiceCall.js)",
        "dest": "src/$1"
      },
      {
        "src": "/(.*)",
        "dest": "src/frontend/$1"
      },
      {
        "src": "/public/(.*)",
        "dest": "/public/$1"
      }
    ]
  }  